<div>
    <h1 class="card z-depth-3 center-align">Read the latest articles</h1>
    <div class="row">
        <div class="col s3"></div>
        <h5 class="card z-depth-3 center-align col s6">Click Scrape to get the newest articles</h5>
    </div>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8 left-align">
        {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <!-- Button -->
                    <button type="button" class="btn btn-default save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
        {{/each}}
    </div>
</div>